@font-face {font-family:"STARWARS";src:url("<%= asset_path 'STARWARS.eot?' %>") format("eot"),url("<%= asset_path 'STARWARS.woff' %>") format("woff"),url("<%= asset_path 'STARWARS.ttf' %>") format("truetype"),url("<%= asset_path 'STARWARS.svg#STARWARS' %>") format("svg");font-weight:normal;font-style:normal;}

body {
  background-image: url("<%= asset_path 'jakku.jpg' %>");
  background-repeat: no-repeat;
  background-position: center;
  background-attachment: fixed;
  background-color: rgb(0, 0, 0);  
}

.title {
  font-family: 'STARWARS';
  font-size: 42px;
  color: rgb(255,255,255);
  text-align: center;
}

.content {
  font-family: "STARWARS";
  font-size: 24px;
  color: rgb(255,255,255);
  text-shadow:
    -1px -1px 0 #000,
    1px -1px 0 #000,
    -1px 1px 0 #000,
    1px 1px 0 #000;   
  
  .prediction {
    position: absolute;    
    top: 115px;
    left: 73px;
  }

  .quote {
    position: absolute;
    bottom: 115px;
    right: 70px;    
  }
  .countdown {
    position: fixed;
    bottom: 35px;
    left: 200px;
  }
}